# OS-specific files
.DS_Store         # macOS specific
Thumbs.db          # Windows specific

# IDEs and Editors
.vscode/           # VSCode settings
.idea/             # JetBrains IDE settings
*.swp              # Vim swap files

# Vite and Node.js specific
.vite/             # Vite build cache
node_modules/      # Node.js dependencies
npm-debug.log      # NPM debug logs
yarn-debug.log     # Yarn debug logs
yarn-error.log     # Yarn error logs

# Build outputs
dist/              # Vite build output
build/             # General build output
target/            # Gradle build output
flutter/.pub-cache/ # Flutter package cache (if using Flutter in your repo)

# TypeScript build and caching
*.tsbuildinfo      # TypeScript incremental compilation cache

# Log files and temporary files
*.log              # Log files
*.tmp              # Temporary files

# Environment files (do not commit sensitive info)
.env               # General environment file
.env.local         # Local environment overrides
.env.*.local       # Environment file for specific environments

# Dependency locks (if you prefer using one over the other, choose accordingly)
package-lock.json  # NPM lock file
yarn.lock          # Yarn lock file

# Expo/React Native (Android and iOS related)
/ios/Pods/          # iOS Pods (CocoaPods)
/android/.gradle/   # Android Gradle files
/android/build/     # Android build files

# Gradle files (commonly used in React Native and Android projects)
*.gradle           # Gradle wrapper and build files
*.lock             # Generic lock files (e.g., for npm or yarn)

# Watchman (file watching system used in React Native)
.watchmanconfig

# Python (if FastAPI is in the repo)
__pycache__/        # Python bytecode cache
*.pyc               # Python bytecode files
*.pyo               # Python optimization files
*.class             # Java class files (for mixed projects)

# Miscellaneous
*.bak               # Backup files
*.orig              # Original files (e.g., from merges)
